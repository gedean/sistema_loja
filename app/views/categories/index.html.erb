<h1> Listando categorias </h1>

<table>
  <tr>
  <th>Descrição</th>
  <th></th>
</tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.desc %> </td>
    <td><%=link_to 'Mostrar', category_path(category) %> </td>
    <td><%=link_to 'Editar', edit_category_path(category)%> </td>
    <td><%=link_to 'Excluir', category_path(category), method: :delete,
    data: { confirm: 'Você tem certeza que deseja excluir essa categoria?'}
    %> </td>
  </tr>
  <% end %>

<%= link_to 'Nova categoria', new_category_path  %>
</table>