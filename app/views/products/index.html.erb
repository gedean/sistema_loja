<h1>Listando Produtos</h1>

<%= link_to 'Novo Produto', new_product_path %>

<table>
  <tr>
    <th>Descrição</th>
    <th>Preço</th>
    <th>Categoria</th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.category.desc %></td>
      <td><%= link_to 'Mostrar', product_path(product) %></td>
      <td><%= link_to 'Editar', edit_product_path(product) %></td>
      <td><%= link_to 'Excluir', product_path(product),
      method: :delete,
      data: { confirm: 'Tem certeza que deseja excluir esse produto?' } %></td>
    </tr>
  <% end %>
</table>